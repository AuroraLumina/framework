<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php">
  <testsuites>
    <testsuite name="My Test Suite">
      <directory>./tests</directory>
    </testsuite>
  </testsuites>

  <coverage>
    <filter>
      <whitelist>
        <directory suffix=".php">./src</directory>
      </whitelist>
    </filter>
    <report>
      <clover outputFile="coverage.xml"/>
    </report>
  </coverage>
</phpunit>
